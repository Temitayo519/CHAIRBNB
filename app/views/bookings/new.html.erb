<div class="container">
  <div class="row">
    <div class="col">
      <h1>New booking for <%= @chair.name %> - £<%= @chair.price %> per/day </h1>
    </div>
  </div>
  <div>
    <%= simple_form_for [@chair, @booking] do |f| %>
      <%= f.input :start_date, html5:true %>
      <%= f.input :end_date, html5:true %>
      <hr>
      <div>
        <strong>Total Price: £<span id="total_price">0</span></strong>
      </div>
      <hr>
      <%= f.submit "Book"%>
    <% end %>
  </div>
</div>
