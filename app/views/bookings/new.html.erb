<div class="container" style="margin-top: 10px;">
  <div class="row">
    <div class="col">
      <h1 class="text-center" style="padding-left: 16px; padding-top: 16px;">New booking</h1>
      <h2 class="text-center" style="padding-left: 16px; padding-top: 16px;"><%= @chair.name %> - Â£<%= @chair.price %>/day </h2>
    </div>
  </div>

  <div class="col-md-6 offset-md-3">
    <%= simple_form_for [@chair, @booking] do |f| %>
      <div class="form-row" style="display: flex;">
        <div class="form-group col-md-6">
          <%= f.input :start_date, html5: true, label: 'Start Date' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :end_date, html5: true, label: 'End Date' %>
        </div>
      </div>
      <div class="form-group" style="justify-content: center; display: flex">
        <%= f.submit "Book", class:"book-now-btn" %>
      </div>
    <% end %>
  </div>
</div>
