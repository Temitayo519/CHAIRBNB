
<div class="chair-container">
  <div class="card-show">

    <div class="card-image">

      <% if @chair.photos.attached? %>
        <% @chair.photos.each do |photo| %>
          <%= cl_image_tag(photo.key, alt: @chair.name) %>
        <% end %>
      <% else %>
        <img src="<%= @chair.image_url %>" alt="<%= @chair.name %>">
      <% end %>
      <div class="image-info-link">
        <div class="back-btn-container">
          <%= link_to "Back to all chairs", chairs_path, class: "back-btn" %>
        </div>
      </div>
    </div>
    
    <div class="card-content">
    <div class="card-show-details">
      <h5><%= @chair.name %></h5>
      <p>Â£<%= @chair.price %> per day</p>
      <p>Sold by <%= @chair.user.username %></p>
      <h5> Description: </h5>
      <p> <%= @chair.description %> </p>
        <hr><hr>
        <%= link_to "Book Now", new_chair_booking_path(@chair), class: "book-now-btn" %>
      </div>

    </div>

  </div>
</div>
