<div class="container">
  <div class="row">
    <div class="col">
      <h1 style="padding-left: 16px; padding-top: 16px;">All Chairs</h1>
      <div class="cards">
        <% @chairs.each do |chair| %>
          <div class="chair-card">
            <% if chair.photos.attached? %>
              <% chair.photos.each do |photo| %>
                <%= cl_image_tag(photo.key, alt: chair.name, class: 'chair-image') %>
              <% end %>
            <% else %>
              <img src="<%= chair.image_url %>" alt="<%= chair.name %>" class="chair-image">
            <% end %>

            <div class="chair-info">
              <div class="chair-details">
                <h5> <%= chair.name %> </h5>
                <p> Â£<%= chair.price %> per day </p>
              </div>

              <div class="view-button">
                <%= link_to 'View chair', chair_path(chair) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
